{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
